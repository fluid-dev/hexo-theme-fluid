// for tocbot
#toc {
    font-size: 16px;
}

.toc-title{
    font-size: 1.5rem;
    font-weight: 400;
}

#tocbot ol{
    list-style: none;
}

.tocbot-list ol{
    list-style: none;
    padding-left: 15px;
}

.tocbot-link{
    color: #34495e;
}

.tocbot-active-link {
    font-weight: 600;
    color: #89229b;
}

.tocbot-is-collapsible {
    max-height: 1000px;
    overflow: hidden;
    transition: all 300ms ease-in-out;
}

.tocbot-is-collapsed {
    max-height: 0;
}

@media (max-width: 768px) {
  #toc {
    display: none;
  }
}

