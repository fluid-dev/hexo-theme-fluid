// 友链页
@media (max-width: 768px)
  .links
    margin-left .5em
    margin-right .5em

.link-card
  box-shadow none

  &:hover
    box-shadow: 0 0 25px 0 rgba(0,0,0,0.16);
    z-index 1

  &-title
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;

  &-text
    height: 3em;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    overflow: hidden;
