.about-avatar
  position relative
  margin -8rem auto 1rem
  width 10rem
  height 10rem
  z-index 3

  img
    width 100%
    height 100%
    border-radius 50%
    -moz-border-radius 50%
    -webkit-border-radius 50%
    object-fit cover
    -webkit-box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)
    box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)

.about-info
  & > div
    margin-bottom .5rem

.about-name
  font-size 1.75rem
  font-weight bold

.about-intro
  font-size 1rem

.about-icons
  & > a:not(:last-child)
    margin-right .5rem

  & > a > i
    font-size 1.5rem
